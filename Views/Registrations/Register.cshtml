@model SchoolEvents.Models.Participant
@{
    ViewData["Title"] = "Register for Event";
}

<div class="container py-4">
    <div class="card p-4" style="background-color: var(--card-bg); color: var(--text-main); max-width: 600px; margin: auto;">
        <h1 class="fw-bold mb-4 text-center">Register for @ViewBag.EventTitle</h1>

        <form asp-action="Register" method="post">
            <input type="hidden" name="eventId" value="@ViewBag.EventId" />

            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" style="background-color: #fff; color: #1A3263;" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" style="background-color: #fff; color: #1A3263;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ClassName" class="form-label">Class</label>
                <input asp-for="ClassName" class="form-control" style="background-color: #fff; color: #1A3263;" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn btn-primary">Register</button>
                <a asp-controller="Events" asp-action="Details" asp-route-id="@ViewBag.EventId" class="btn btn-light">Back to Event</a>
            </div>
        </form>
    </div>
</div>

<style>
    .btn-primary {
        background-color: var(--accent);
        color: var(--bg-main);
        font-weight: 600;
        border: none;
    }

        .btn-primary:hover {
            background-color: #FFC966;
            color: var(--bg-main);
        }

    .btn-light {
        background-color: var(--text-main);
        color: var(--bg-main);
        font-weight: 600;
    }

        .btn-light:hover {
            background-color: #f0f0f0;
            color: var(--bg-main);
        }
</style>
