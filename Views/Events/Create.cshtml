@model SchoolEvents.Models.SchoolEvent
@{
    ViewData["Title"] = "Create Event";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg p-4 rounded-4" style="background-color: var(--card-bg);">

                <div class="text-center mb-4">
                    <h2 class="fw-bold text-light">🎉 Create New Event</h2>
                    <p class="text-light small">Fill in the details below to add a new school event.</p>
                </div>

                <form asp-action="Create" method="post">

                    <div class="form-floating mb-3">
                        <input asp-for="Title" class="form-control" placeholder="Event Title" />
                        <label asp-for="Title">Event Title</label>
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Event Description" style="height:100px;"></textarea>
                        <label asp-for="Description">Description</label>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col">
                            <div class="form-floating">
                                <input asp-for="StartAt" type="datetime-local" class="form-control" />
                                <label asp-for="StartAt">Start At</label>
                                <span asp-validation-for="StartAt" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <input asp-for="EndAt" type="datetime-local" class="form-control" />
                                <label asp-for="EndAt">End At</label>
                                <span asp-validation-for="EndAt" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <select asp-for="Type" asp-items="Html.GetEnumSelectList<SchoolEvents.Models.EventType>()" class="form-select"></select>
                        <label asp-for="Type">Event Type</label>
                        <span asp-validation-for="Type" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Location" class="form-control" placeholder="Location" />
                        <label asp-for="Location">Location</label>
                        <span asp-validation-for="Location" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Capacity" class="form-control" placeholder="Capacity" />
                        <label asp-for="Capacity">Capacity</label>
                        <span asp-validation-for="Capacity" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <select asp-for="OrganizerId" asp-items="(SelectList)ViewBag.OrganizerId" class="form-select"></select>
                        <label asp-for="OrganizerId">Organizer</label>
                        <span asp-validation-for="OrganizerId" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold mb-2">Create Event</button>
                    <a asp-action="Index" class="btn btn-outline-light w-100 py-2 fw-semibold text-center">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
