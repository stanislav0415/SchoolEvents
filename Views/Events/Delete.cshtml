@model SchoolEvents.Models.SchoolEvent
@{
    ViewData["Title"] = "Delete Event";
}

<div class="container py-4">
    <div class="card p-4" style="background-color: var(--card-bg); color: var(--text-main);">
        <h1 class="fw-bold mb-3">Delete Event</h1>
        <h5 class="mb-4">Are you sure you want to delete this?</h5>

        <div class="mb-4">
            <h4>@Model.Title</h4>
            <dl class="row">
                <dt class="col-sm-3">Start</dt>
                <dd class="col-sm-9">@Model.StartAt.ToString("f")</dd>

                <dt class="col-sm-3">End</dt>
                <dd class="col-sm-9">@Model.EndAt.ToString("f")</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Model.Location</dd>
            </dl>
        </div>

        <form asp-action="Delete" method="post" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-outline-light">Delete</button>
            <a asp-action="Index" class="btn btn-outline-light ">Back to List</a>
        </form>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="text-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </div>
</div>

<style>
    .btn-outline-light {
        background-color: transparent;
        color: var(--text-main);
        border: 2px solid var(--accent);
        font-weight: 600;
    }

        .btn-outline-light:hover {
            background-color: var(--accent);
            color: var(--bg-main);
            border-color: var(--accent);
        }

    .btn-light {
        background-color: var(--text-main);
        color: var(--bg-main);
        font-weight: 600;
    }

        .btn-light:hover {
            background-color: #f0f0f0;
            color: var(--bg-main);
        }
</style>
