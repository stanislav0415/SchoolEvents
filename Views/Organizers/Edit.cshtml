@model SchoolEvents.Models.Organizer
@{
    ViewData["Title"] = "Edit Organizer";
}

<div class="container d-flex justify-content-center py-5">

    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4 p-4">

            <div class="text-center mb-4">
                <h2 class="fw-bold">✏️ Edit Organizer</h2>
            </div>

            <form asp-action="Edit" method="post">

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control modern-input" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control modern-input" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-semibold"></label>
                    <input asp-for="Phone" class="form-control modern-input" />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Department" class="form-label fw-semibold"></label>
                    <input asp-for="Department" class="form-control modern-input" />
                    <span asp-validation-for="Department" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">
                        ← Back
                    </a>

                    <button type="submit" class="btn btn-primary px-4">
                        Save Changes
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>

<style>
    .modern-input {
        background-color: #ffffff;
        color: #212529;
        border: 1px solid #ced4da;
        border-radius: 10px;
        padding: 10px 12px;
    }

        
        .modern-input:focus {
            background-color: #ffffff;
            color: #212529;
            border-color: var(--accent);
            box-shadow: 0 0 0 0.15rem rgba(250,185,91,.25);
        }

    .form-label {
        color: #f8f9fa;
    }

</style>
