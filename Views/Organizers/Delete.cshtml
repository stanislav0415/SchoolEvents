@model SchoolEvents.Models.Organizer
@{
    ViewData["Title"] = "Delete Organizer";
}

<div class="container py-5">

    <div class="card delete-card p-4 mx-auto">

        <h2 class="fw-bold mb-3 ">⚠ Delete Organizer</h2>

        <p class="mb-4 text-light opacity-75">
            Are you sure you want to permanently delete this organizer?
        </p>

        <div class="info-box mb-4">

            <div class="row mb-2">
                <div class="col-4 label">Name</div>
                <div class="col-8">@Model.Name</div>
            </div>

            <div class="row mb-2">
                <div class="col-4 label">Email</div>
                <div class="col-8">@Model.Email</div>
            </div>

            <div class="row mb-2">
                <div class="col-4 label">Phone</div>
                <div class="col-8">@Model.Phone</div>
            </div>

            <div class="row">
                <div class="col-4 label">Department</div>
                <div class="col-8">@Model.Department</div>
            </div>

        </div>

        <form asp-action="Delete" method="post" class="d-flex gap-3">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger px-4">
                Delete
            </button>

            <a asp-action="Index" class="btn btn-outline-light">
                Cancel
            </a>
        </form>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="text-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }

    </div>

</div>


<style>
    .delete-card {
        max-width: 550px;
        background-color: var(--card-bg);
        border-radius: 14px;
        border: 1px solid rgba(255,255,255,0.08);
        box-shadow: 0 8px 24px rgba(0,0,0,0.25);
    }

    .info-box {
        background-color: rgba(255,255,255,0.04);
        border-radius: 10px;
        padding: 16px;
        color: var(--text-main);
    }

    .label {
        font-weight: 600;
        opacity: 0.75;
    }

    .btn-danger {
        background-color: #FF4C4C;
        border: none;
        font-weight: 600;
    }

        .btn-danger:hover {
            background-color: #ff6b6b;
        }
</style>
