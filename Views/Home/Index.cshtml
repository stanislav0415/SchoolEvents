@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid p-0">

  
    <section class="hero text-center d-flex align-items-center justify-content-center" style="min-height: 80vh; background-color: var(--card-bg);">
        <div class="text-light">
            <h1 class="display-4 fw-bold mb-3">🎓 Welcome to School Events</h1>
            <p class="lead mb-4">Discover upcoming events, join activities, and stay updated with your school community.</p>
            <a asp-controller="Events" asp-action="Index" class="btn btn-primary btn-lg me-2">View Events</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">Get Started</a>
        </div>
    </section>

  
    <section class="py-5" style="background-color: var(--bg-main);">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-lg p-3">
                        <div class="card-body">
                            <h3 class="card-title fw-bold">Upcoming Events</h3>
                            <p class="card-text">Check out the latest events in your school and never miss an activity again.</p>
                            <a asp-controller="Events" asp-action="Index" class="btn btn-primary mt-2 ">Explore</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-lg p-3">
                        <div class="card-body">
                            <h3 class="card-title fw-bold">Organizers</h3>
                            <p class="card-text">Meet the teachers and clubs organizing events and see what’s happening in your community.</p>
                            <a asp-controller="Organizers" asp-action="Index" class="btn btn-primary mt-2">View Organizers</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-lg p-3">
                        <div class="card-body">
                            <h3 class="card-title fw-bold">Event Calendar</h3>
                            <p class="card-text">Plan ahead with our interactive calendar — know what’s coming up at a glance.</p>
                            <a asp-controller="Calendar" asp-action="Index" class="btn btn-primary mt-2">See Calendar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5 text-center" style="background-color: var(--card-bg);">
        <div class="container">
            <h2 class="fw-bold mb-3 text-light">Join our school community today!</h2>
            <p class="mb-4 text-light">Register now to participate in events and stay updated with all school activities.</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">Register Now</a>
        </div>
    </section>

</div>