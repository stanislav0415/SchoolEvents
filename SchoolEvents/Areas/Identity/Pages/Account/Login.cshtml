@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container pt-5 d-flex justify-content-center">

    <div class="col-md-5 col-lg-4">
        <div class="card shadow-lg rounded-4 p-4">

            <div class="text-center mb-4">
                <h2 class="fw-bold">🎓 School Events</h2>
                <p class="mb-0">Log in to your account</p>
            </div>

            <form id="account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" autocomplete="username" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="current-password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>


                <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold mb-3">
                    Log in
                </button>

                <div class="text-center">
                    <p>
                        Don't have an account?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                    </p>
                   
                </div>

            </form>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
